<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:MauiApp.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="MauiApp">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate pages:AuthView}"
        Route="AuthPage" />

    <ShellContent
        Title="Темы"
        ContentTemplate="{DataTemplate pages:AuthView}"
        Route="ThemesPage"/>
    
    <ShellContent
        Title="Все тесты"
        ContentTemplate="{DataTemplate pages:AuthView}"
        Route="TestsPage"/>
    
    <ShellContent
        Title="Тест"
        ContentTemplate="{DataTemplate pages:AuthView}"
        Route="Test"/>
    
    <ShellContent
        Title="Теория"
        ContentTemplate="{DataTemplate pages:AuthView}"
        Route="LessonsPage"/>



</Shell>

<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp.Pages.AuthView"
             Title="Вход">

    <StackLayout Padding="20" Spacing="10">

        <Entry Placeholder="Логин" Text="{Binding Model.Username}" />
        <Entry Placeholder="Пароль" IsPassword="True" Text="{Binding Model.Password}" />

        <Label Text="{Binding ErrorMessage}" TextColor="Red" />

        <Button Text="Войти" Command="{Binding LoginCommand}" CommandParameter="{Binding Model}" />
        
    </StackLayout>
</ContentPage>
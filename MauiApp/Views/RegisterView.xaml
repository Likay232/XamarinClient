<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:MauiApp.ViewModels"
             x:Class="MauiApp.Views.RegisterView"
             x:DataType="viewModel:RegisterViewModel"
             Title="Регистрация"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">

            <Label Text="Регистрация"
                   FontSize="28"
                   HorizontalOptions="Center"
                   FontAttributes="Bold"
                   TextColor="#333" />

            <Frame BackgroundColor="White"
                   CornerRadius="12"
                   Padding="20"
                   HasShadow="True"
                   BorderColor="#DDD">

                <VerticalStackLayout Spacing="15">

                    <Entry Placeholder="Имя"
                           Text="{Binding FirstName}"
                           FontSize="16"
                           TextColor="Black"
                           BackgroundColor="#FAFAFA"
                           HeightRequest="48"
                           />

                    <Entry Placeholder="Фамилия"
                           Text="{Binding LastName}"
                           FontSize="16"
                           TextColor="Black"
                           BackgroundColor="#FAFAFA"
                           HeightRequest="48"
                           />

                    <Entry Placeholder="Логин"
                           Text="{Binding Username}"
                           FontSize="16"
                           TextColor="Black"
                           BackgroundColor="#FAFAFA"
                           HeightRequest="48"
                           />

                    <Entry Placeholder="Пароль"
                           IsPassword="True"
                           Text="{Binding Password}"
                           FontSize="16"
                           TextColor="Black"
                           BackgroundColor="#FAFAFA"
                           HeightRequest="48"
                           />

                    <Entry Placeholder="Подтвердите пароль"
                           IsPassword="True"
                           Text="{Binding ConfirmPassword}"
                           FontSize="16"
                           TextColor="Black"
                           BackgroundColor="#FAFAFA"
                           HeightRequest="48"
                           />

                    <Label Text="{Binding ErrorMessage}"
                           TextColor="Red"
                           FontSize="14"
                           IsVisible="{Binding ErrorMessage}"
                           HorizontalTextAlignment="Center"/>

                    <Button Text="Зарегистрироваться"
                            Command="{Binding RegisterCommand}"
                            CommandParameter="{Binding Model}"
                            CornerRadius="8"
                            HeightRequest="50"
                            FontSize="18"
                            TextColor="White"
                            BackgroundColor="#007AFF"/>

                </VerticalStackLayout>
            </Frame>

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="5" Padding="10">

                <Label Text="Уже есть аккаунт?"
                       FontSize="14"
                       TextColor="#666"
                       VerticalTextAlignment="Center"/>

                <Button Text="Войти"
                        FontSize="14"
                        TextColor="#007AFF"
                        BackgroundColor="Transparent"
                        Padding="0"
                        HeightRequest="30"
                        VerticalOptions="Center"
                        HorizontalOptions="Start"
                        Clicked="LoginButton_OnClicked"
                        CornerRadius="0"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

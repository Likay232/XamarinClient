@model List<WebApi.Infrastructure.Models.DTO.ThemeDto>

@{
    ViewBag.Title = "Темы";
    Layout = "_ClientLayout";
}

<div class="page-header">
    <h2>Темы</h2>
</div>

<style>

    .page-header {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 12px;
        margin-bottom: 20px;
    }

    .page-header h2 {
        margin: 0;
    }

    .themes-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 20px;
    }

    .theme-card {
        background: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.08);
        padding: 20px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        transition: transform .15s ease, box-shadow .15s ease;
    }

    .theme-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 18px rgba(0,0,0,0.12);
    }

    .theme-title {
        text-align: center;
        font-size: 18px;
        font-weight: 600;
        margin-bottom: 6px;
    }

    .theme-title a {
        text-decoration: none;
        color: #222;
    }

    .theme-description {
        text-align: center;
        font-size: 14px;
        color: #666;
        margin-bottom: 15px;
    }
    
    .theme-section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-weight: 500;
        font-size: 15px;
    }

    .theme-section {
        border-top: 1px solid #eee;
        padding: 10px;
        margin-top: 10px;
        position: relative;
    }

    .theme-section.clickable {
        cursor: pointer;
    }

    .theme-section.clickable:hover {
        background-color: #f7f9fc;
    }

    .section-link {
        position: absolute;
        inset: 0;
        z-index: 1;
    }

    .theme-section-header {
        position: relative;
        z-index: 2;
        pointer-events: none;
    }
    
    .theme-actions {
        margin-top: 15px;
        padding-top: 10px;
        border-top: 1px solid #eee;
        display: flex;
        justify-content: flex-end;
        gap: 12px;
    }

</style>

<div class="themes-grid">
    @foreach (var theme in Model)
    {
        <div class="theme-card">

            <div class="theme-title">
                <a href="@Url.Action("Tasks", "ClientMvc", new { themeId = theme.Id })">
                    @theme.Title
                </a>
            </div>

            <div class="theme-description">
                @theme.Description
            </div>

            <div class="theme-footer">
                <div class="theme-section clickable">
                    <a class="section-link"
                       href="@Url.Action("Lessons", "ClientMvc", new { themeId = theme.Id })"></a>

                    <div class="theme-section-header">
                        <span>Материалы</span>
                    </div>
                </div>

                <div class="theme-section clickable">
                    <a class="section-link"
                       href="@Url.Action("Tasks", "ClientMvc", new { themeId = theme.Id })"></a>

                    <div class="theme-section-header">
                        <span>Задания</span>
                    </div>
                </div>
            </div>
            
            <div class="theme-actions">
                
            </div>
        </div>
    }
</div>

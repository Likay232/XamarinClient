@model List<WebApi.Infrastructure.Models.DTO.LessonDto>

@{
    ViewBag.Title = "–ú–∞—Ç–µ—Ä–∏–∞–ª—ã";
    Layout = "_MasterPage";
}

<div class="page-header">
    <h2>@ViewBag.ThemeName</h2>
    <a href="@Url.Action("AddLesson", "Admin", new { themeId = ViewBag.ThemeId })"
       class="add-icon-large"
       title="–î–æ–±–∞–≤–∏—Ç—å –º–∞—Ç–µ—Ä–∏–∞–ª">+</a>

@model List<WebApi.Infrastructure.Models.DTO.UserDto>

@{
    ViewBag.Title = "Пользователи";
    Layout = "_AdminLayout";
}

<style>
    .users-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 20px;
    }

    .user-card {
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.08);
        padding: 18px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        transition: transform .15s ease, box-shadow .15s ease;
    }

    .user-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 18px rgba(0,0,0,0.12);
    }

    .user-header {
        text-align: center;
        margin-bottom: 10px;
    }

    .user-name {
        font-size: 17px;
        font-weight: 600;
    }

    .user-username {
        font-size: 13px;
        color: #777;
    }

    .user-status {
        text-align: center;
        margin: 10px 0;
    }

    .status-badge {
        display: inline-block;
        padding: 4px 10px;
        border-radius: 12px;
        font-size: 12px;
        font-weight: 500;
    }

    .status-active {
        background-color: #e6f4ea;
        color: #2e7d32;
    }

    .status-blocked {
        background-color: #fdecea;
        color: #c62828;
    }

    .user-actions {
        display: flex;
        justify-content: space-between;
        gap: 8px;
        margin-top: 12px;
        border-top: 1px solid #eee;
        padding-top: 12px;
    }

    .user-action {
        flex: 1;
        text-align: center;
        padding: 6px;
        border-radius: 6px;
        text-decoration: none;
        font-size: 13px;
        border: 1px solid #ccc;
        color: #444;
        transition: all .15s ease;
    }

    .user-action:hover {
        background-color: #f0f2f5;
    }

    .user-action.block {
        border-color: #c9302c;
        color: #c9302c;
    }

    .user-action.unblock {
        border-color: #2e7d32;
        color: #2e7d32;
    }

    .user-action.password {
        border-color: #0275d8;
        color: #0275d8;
    }

    .user-action.delete {
        border-color: #888;
        color: #888;
    }

    .user-action.delete:hover {
        background-color: #fbeaea;
        border-color: #c9302c;
        color: #c9302c;
    }
    
    .user-header{
        display: flex;
        flex-direction: row;
        justify-content: space-between;
    }

    .stats-overview-inline {
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 14px;
        margin-bottom: 20px;
        flex-wrap: wrap; /* если экран маленький — переносит элементы */
    }

    .stats-overview-inline label {
        font-weight: 500;
        font-size: 16px;
    }

    .stats-overview-inline span {
        font-size: 16px;
    }

    .stats-overview-inline input[type="date"] {
        padding: 4px 8px;
        border-radius: 6px;
        border: 1px solid #ccc;
    }

    .stats-overview-inline .stat-result {
        font-weight: 600;
        color: #0275d8;
        margin-left: 10px;
    }
</style>

<div class="stats-overview">
    <div class="stats-overview-inline">
        <span>Зарегистрировались</span>
        <span>с</span>
        <input type="date" id="dateFrom"/>

        <span>по</span>
        <input type="date" id="dateTo"/>

        <span class="stat-result" id="registrationResult">0</span>
        <span>человек</span>
    </div>
</div>


<div class="users-grid">
    @foreach (var user in Model)
    {
        <div class="user-card">

            <div class="user-header">
                <div class="user-info">
                    <div class="user-name">
                        @user.FirstName @user.LastName
                    </div>
                    <div class="user-username">
                        @user.Username
                    </div>
                </div>
                
                <div class="user-status">
                    @if (user.IsBlocked)
                    {
                        <span class="status-badge status-blocked">Заблокирован</span>
                    }
                    else
                    {
                        <span class="status-badge status-active">Активен</span>
                    }
                </div>
            </div>
            
            <div class="user-actions">

                <a class="user-action @(user.IsBlocked ? "unblock" : "block")"
                   href="@Url.Action("SwitchBlockState", "Admin", new { userId = user.Id })"
                   onclick="return confirm('Вы уверены, что хотите @(user.IsBlocked ? "разблокировать" : "заблокировать") пользователя?');">
                    @(user.IsBlocked ? "Разблокировать" : "Заблокировать")
                </a>

                <a class="user-action password"
                   href="@Url.Action("GetUser", "Admin", new { userId = user.Id })">
                    Подробнее
                </a>

                <a class="user-action delete"
                   href="@Url.Action("DeleteUser", "Admin", new { userId = user.Id })"
                   onclick="return confirm('Вы уверены, что хотите удалить пользователя @user.Username?');">
                    Удалить
                </a>

            </div>

        </div>
    }
</div>

<script>
    const dateFromInput = document.getElementById("dateFrom");
    const dateToInput = document.getElementById("dateTo");
    const resultDiv = document.getElementById("registrationResult");

    async function fetchRegistrations() {
        const dateFrom = dateFromInput.value;
        const dateTo = dateToInput.value;

        if (!dateFrom || !dateTo) {
            return;
        }

        try {
            const response = await fetch(`/Admin/GetRegistrationsStatistic?dateFrom=${dateFrom}&dateTo=${dateTo}`);
            if (!response.ok) throw new Error("Ошибка запроса");
            const count = await response.json();
            resultDiv.textContent = `${count}`;
        } catch (err) {
            resultDiv.textContent = "Ошибка при загрузке статистики";
            console.error(err);
        }
    }

    dateFromInput.addEventListener("change", fetchRegistrations);
    dateToInput.addEventListener("change", fetchRegistrations);

    const today = new Date().toISOString().split('T')[0];
    const weekAgo = new Date(Date.now() - 7*24*60*60*1000).toISOString().split('T')[0];
    dateToInput.value = today;
    dateFromInput.value = weekAgo;
    fetchRegistrations();
</script>


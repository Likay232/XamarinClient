@model List<WebApi.Infrastructure.Models.DTO.TaskDto>

@{
    ViewBag.Title = "Задания";
    Layout = "_AdminLayout";
}

<h2>
    @if (Model.Any())
    {
        @:Задания для темы @Model[0].ThemeName
    }
    else
    {
        @:Задания не найдены
    }
</h2>

<style>
    .tasks-list {
        display: flex;
        flex-direction: column;
        gap: 24px;
    }

    .exam-card {
        background: #ffffff;
        border-radius: 14px;
        padding: 20px 22px;
        box-shadow: 0 6px 18px rgba(0,0,0,0.08);
        position: relative;
    }

    .exam-header {
        position: absolute;
        top: 14px;
        right: 16px;
    }

    .difficulty-badge {
        background: #eef4fb;
        color: #0275d8;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 13px;
        font-weight: 600;
    }

    .exam-image {
        width: 100%;
        height: 260px;              
        object-fit: contain;        
        background-color: #f4f6f9;  
        border-radius: 10px;
        margin-bottom: 16px;
    }

    .exam-question {
        font-size: 18px;
        font-weight: 600;
        margin-bottom: 18px;
        color: #222;
    }

    .exam-answers {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .exam-answer {
        background: #f4f6f9;
        padding: 12px 14px;
        border-radius: 10px;
        font-size: 15px;
        border: 1px solid #e1e5eb;
    }

    .exam-answer.correct {
        background: #e6f6ea;
        border-color: #4caf50;
        color: #2e7d32;
        font-weight: 600;
    }

    .exam-hint {
        margin-top: 14px;
        background: #fff8e1;
        border-radius: 10px;
        padding: 10px 14px;
        font-size: 14px;
        color: #856404;
    }

    .exam-actions {
        margin-top: 18px;
        padding-top: 12px;
        border-top: 1px solid #eee;
        display: flex;
        justify-content: flex-end;
        gap: 12px;
    }

    .exam-action {
        width: 30px;
        height: 30px;
        border-radius: 6px;
        border: 1px solid #ccc;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        color: #444;
        transition: all .15s ease;
        font-size: 14px;
    }

    .exam-action:hover {
        background-color: #f0f2f5;
        border-color: #999;
    }

    .exam-action.edit:hover {
        background-color: #eef4fb;
        color: #0275d8;
        border-color: #0275d8;
    }

    .exam-action.delete:hover {
        background-color: #fbeaea;
        color: #c9302c;
        border-color: #c9302c;
    }
</style>

@if (Model.Any())
{
    <div class="tasks-list">
        @foreach (var task in Model)
        {
            <div class="exam-card">

                <div class="exam-header">
                    <span class="difficulty-badge">
                        Уровень @task.DifficultyLevel
                    </span>
                </div>

                @if (!string.IsNullOrEmpty(task.FilePath))
                {
                    <img src="@task.FilePath"
                         class="exam-image"
                         alt="Изображение задания"/>
                }

                <div class="exam-question">
                    @task.Text
                </div>

                @if (task.AnswerVariants.Any())
                {
                    <div class="exam-answers">
                        @foreach (var variant in task.AnswerVariants.Where(v => v is not null))
                        {
                            var isCorrect = variant == task.CorrectAnswer;

                            <div class="exam-answer @(isCorrect ? "correct" : "")">
                                @variant
                            </div>
                        }
                    </div>
                }

                @if (!string.IsNullOrEmpty(task.Hint))
                {
                    <div class="exam-hint">
                        💡 @task.Hint
                    </div>
                }

                <div class="exam-actions">
                    <a class="exam-action edit"
                       href="@Url.Action("EditTask", "Admin", new { taskId = task.Id })"
                       title="Редактировать">
                        ✏️
                    </a>

                    <a class="exam-action delete"
                       href="@Url.Action("DeleteTask", "Admin", new { taskId = task.Id, themeId = task.ThemeId })"
                       onclick="return confirm('Удалить задание?');"
                       title="Удалить">
                        🗑
                    </a>
                </div>

            </div>
        }
    </div>
}
else
{
    <p>Для этой темы не добавлено ни одного задания</p>
}